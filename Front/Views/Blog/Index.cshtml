@{
    ViewData["Title"] = "Blog";
}

<div class="container">
    <!-- Main Content Section -->
    <section class="py-5">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-4">Latest Blog Posts</h2>
                <!-- Loop through each blog post -->
                @foreach (var post in Model)
                {
                    <div class="card mb-4">
                        <h5 class="card-title">@post.Title</h5>
                        <!-- Display the picture -->
                        <img src="~/images/logo.png" alt="Blog Application Logo" style="width: 100px; height: auto;">
                        <div class="card-body">
                            <!-- Display the body -->
                            <p class="card-text">@post.Body</p>
                            <!-- Display the published date -->
                            <p class="card-text">Published on: @post.PublishedDate</p>
                            <!-- Upvote and downvote buttons -->
                            <div class="reaction-buttons">
                                <!-- Upvote button -->
                                <button class="btn btn-sm btn-outline-primary upvote-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0m-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707z" />
                                    </svg>
                                </button>
                                <!-- Downvote button -->
                                <button class="btn btn-sm btn-outline-primary upvote-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <h2 class="mb-4">Posted Blogs</h2>
                <!-- List of blog titles -->
                <div class="list-group">
                    @foreach (var post in Model)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@post.Title</a>
                    }
                </div>
                
            </div>
        </div>
    </section>
</div>

@section Styles {
    <style>
        /* Custom styles for the index page */
        .bg-bisleri {
            background-color: #00B3A1;
        }

        .btn-primary {
            background-color: #00B3A1;
            color: white;
        }

            .btn-primary:hover {
                background-color: #008f7a;
            }
    </style>
}


