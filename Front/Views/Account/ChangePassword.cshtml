@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Change Password";
}

<!-- Page Content -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Change Password</h2>
            <!-- Change Password Form -->
            <form id="changePasswordForm" asp-action="ChangePassword" method="post">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                </div>
                <!-- Additional form fields for changing password -->
                <button type="submit" class="btn btn-primary" style="background-color: #00B3A1; color: white;">Change Password</button>
            </form>
        </div>
    </div>
</div>



<script>
    // Function to show a success message after password change
    function showSuccessMessage() {
        alert("Your password has been changed successfully.");
    }

    // Attach event listener to the form submission
    document.getElementById("changePasswordForm").addEventListener("submit", function (event) {
        // Show success message after form submission
        showSuccessMessage();
    });
</script>
